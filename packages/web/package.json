{
  "name": "@popselen/web",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "PopSelen Web",
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:*",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:worker": "rm -rf public/worker-* worker.meta.json && NODE_ENV=production dotenv -- ts-node --skipProject esbuild.build.ts --minify",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:worker": "rm -rf worker.meta.json && NODE_ENV=development dotenv -- ts-node --skipProject esbuild.build.ts --watch",
    "start": "remix-serve build",
    "lint": "eslint",
    "precommit": "lint-staged",
    "test": "jest --setupFiles dotenv/config"
  },
  "dependencies": {
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "axios": "^0.27.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-google-recaptcha-v3": "^1.9.7",
    "socket.io-client": "^4.5.0",
    "type-fest": "^2.12.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/debounce-promise": "^3.1.4",
    "@types/jest": "^27.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/sharedworker": "^0.0.72",
    "autoprefixer": "^10.4.7",
    "dotenv-cli": "^5.1.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.11.0",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "^28.1.0",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "react-test-renderer": "^17.0.2",
    "tailwindcss": "^3.0.24",
    "testdouble": "^3.16.5",
    "ts-jest": "^28.0.2",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
